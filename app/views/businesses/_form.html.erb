<%= form_for @business, :html => {:class => "vertical_form"} do |f| %>
  <fieldset>
    <legend>Business Information</legend>
    <ul>
      <li class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "requiredfield" %>
      </li>
      <li class="field">
        <%= f.label :street %>
        <%= f.text_field :street, class: "requiredfield" %>
      </li>
      <li>
        <%= f.label :city %>
        <%= f.text_field :city, class: "requiredfield" %>
      </li>
      <li>
        <%= f.label :state %>
        <%= f.text_field :state, class: "requiredfield" %>
      </li>
      <li>
        <%= f.label :country %>
        <%= f.text_field :country, class: "requiredfield" %>
      </li>
    </ul>
  </fieldset>
  <fieldset class='fieldsetbuttons'>
    <%= f.submit "Submit", class: "blue styled_button" %>
  </fieldset>
<% end %>
